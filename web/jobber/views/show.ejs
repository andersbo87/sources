<% include ./partials/header %>

<div class="ui huge header">
	Vis alle data for søknad med ID <%= data[0].soknadid %>
</div>
<p>
	Her kan du se alt som er registrert om denne søknaden.
</p>
<div class="panel panel-primary">
  	<div class="panel-heading">
  		Tittel
  	</div>
  	<div class="panel-body">
	    <%= data[0].tittel %>
  	</div>
  	<div class="panel-heading">
	  	Bedrift
  	</div>
  	<div class="panel-body">
    	<%= data[0].bedrift %>
  	</div>
  	<div class="panel-heading">
  		StedID
  	</div>
  	<div class="panel-body">
    	<%= data[0].stedid %>
  	</div>
  	<div class="panel-heading">
	  	StatusID
  	</div>
  	<div class="panel-body">
    	<%= data[0].statusid %>
  	</div>
  	<div class="panel-heading">
	  	Søknadsfrist
  	</div>
  	<div class="panel-body">
    	<%= data[0].soknadsfrist %>
  	</div>
  	<div class="panel-heading">
  		Motivasjon
  	</div>
  	<div class="panel-body">
    	<%= data[0].motivasjon %>
  	</div>
</div>
<script type="text/javascript">
	function reallyDelete(){
		if(confirm("Vil du virkelig slette denne søknaden?"))
			return true;
		else
			return false;
	}
</script>
<p>
	<form onsubmit="return reallyDelete();" action="/jobber/jobb/<%= data[0].soknadid%>?_method=DELETE" method="POST">
		<a class="ui yellow big button" href="<%= data[0].soknadid%>/edit">Oppdater</a>
		<input type="submit" value="Slett" class="ui negative big button" name="btnDelete">
	</form>
</p>
<% include ./partials/footer%>