<%include ./partials/header%>
<div class="ui huge header">
	Status
</div>
<p>Her kan du se, endre og fjerne denne statusen:</p>
<div class="panel panel-primary">
	<div class="panel-heading">
		Status
	</div>
	<div class="panel-body">
		<%= data[0].status%>
	</div>
</div>
<script type="text/javascript">
	function deleteStatus(){
		return confirm("Vil du virkelig fjerne denne statusen?");
	}
</script>
<form onsubmit="return deleteStatus();" method="POST" action="/jobber/status/<%=data[0].statusid%>?_method=DELETE">
	<a class="ui yellow big button" href="/status/<%=data[0].statusid%>/redigerstatus">Oppdater</a>
	<input type="submit" value="Slett" class="ui negative big button" name="">
</form>
<%include ./partials/footer%>