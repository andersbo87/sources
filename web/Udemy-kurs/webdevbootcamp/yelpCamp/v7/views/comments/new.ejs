<% include ../partials/header %>

<div class="container">
	<h1 style="text-align: center;">Skriv en ny kommentar om <%= campground.name %></h1>
	<div class="row">
		<div style="width: 30%; margin: 30px auto;">
			<form method="POST" action="/campgrounds/<%= campground._id %>/comments">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Tekst" name="comment[text]">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Forfatter" name="comment[author]">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Send</button>
				</div>
			</form>
			<a href="/campgrounds">Tilbake</a>
		</div>
		
	</div>
	
</div>
<% include ../partials/footer %>