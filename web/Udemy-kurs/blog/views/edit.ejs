<% include ./partials/header %>
<div class="ui main text container segment">
	<div class="ui huge header">Rediger blogginnlegg "<%= blog.title %>"</div>
	<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
		<div class="field">
			<label>Tittel</label>
			<input type="text" name="blog[title]" value="<%= blog.title %>" placeholder="Bloggtittel">			
		</div>
		<div class="field">
			<label>Bilde (URL)</label>
			<input type="text" name="blog[image]" value="<%= blog.image %>" placeholder="URL til bilde">
		</div>
		<div class="field">			
			<label>Innhold</label>
			<textarea name="blog[body]" placeholder="Innhold"><%= blog.body %></textarea>
		</div>
		<input type="submit" class="ui positive basic button" value="Oppdater" name="btnSubmit">

	</form>
</div>
<% include ./partials/footer %>