<% include ./partials/header %>
<div class="ui main text container segment">
	<div class="ui hyuge header">
		<%= blog.title %>
	</div>
	<div class="ui top attached">
		<div class="item">
			<img class="ui centered rounded image" src="<%= blog.image %>">
			<div class="content">
				<span>
					<%= blog.created.toDateString() %>
				</span>
			</div>
			<div class="description">
				<p>
					<%- blog.body %>
				</p>
			</div>
		</div>
	</div>
	<button class="ui yellow basic button" id="btnUpdate" onclick="window.location='/blogs/<%= blog._id %>/edit';">Oppdater</button>
	<form id="formDelete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
		<input type="submit" value="Slett" class="ui red basic button" name="btnDelete">
	</form>
</div>
<% include ./partials/footer %>