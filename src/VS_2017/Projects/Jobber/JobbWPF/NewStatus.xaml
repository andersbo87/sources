<Window x:Class="JobbWPF.NewStatus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JobbWPF"
        mc:Ignorable="d"
        Title="Legg til ny status" Closing="Window_Closing" Height="122.951" Width="270.492" ResizeMode="NoResize">
    <Grid>
        <Label Content="Her kan du legge inn en ny status i databasen." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Statusnavn" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" />
        <TextBox Name="statusName" Margin="80,35,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" TextChanged="statusName_TextChanged"/>
        <Button Name="btnSave" Content="Lagre" Margin="10,60,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70" Click="btnSave_Click"/>
        <Button Name="btnCancel" Content="Avbryt" Margin="90, 60, 0, 0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="70" Click="btnCancel_Click" />
    </Grid>
</Window>
